<div class="col-pad">
<div class="container">
 <%@users = User.all%>
 <%= form_for(blog) do |f| %>
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
     
    <div class="col-md-10">
     <div class="well well-sm">
       <%= f.label :title %>
       <%= f.text_field :title, class: "form-control",data: { emojiable: true } %>
      </div>
    </div>

    <div class="col-md-10">
     <div class="well well-sm">
       <%= f.label :description %>
       <%= f.text_field :description, class: "form-control" %>
     </div>
    </div>

    <div class="col-md-10">
     <div class="well well-sm">
       <%= f.label :image %>
       <%= f.file_field :image, class: "form-control" %>
     </div>
    </div>

    
       
       <div class="col-md-10">
       <div class="well well-sm">
      Recommends-
        <select multiple id="e1" name="user_id[]" class="form-control" placeholder='Tag User'>

       <% @users.each do |user| %>
          <option value="<%=user.id%>" class="form-control">
            <%= user.email%>
          </option>
        <% end %>
       </select>
      </div>     
      </div>


    <div class="col-md-10">
      
       <%= f.submit "Post",:class=>"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-1">
   </div>
  </div>
  <div class="col-md-1">
  </div>
</div>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-9">
  <br/>
  <div class="">
   <% @blogs.each do |blog|%>
     <div class="well well-sm  ">
       <%= render 'show', blog: blog %>
       <%#= render 'link', blog: blog %>
      </div>
    <% end %>
  </div>
</div>



